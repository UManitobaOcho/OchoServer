extends index

block jumbotron
	link(rel='stylesheet', href='/public/stylesheets/addCourse.css')
	a.logout(href="#" onclick="logout()") Logout
	
	h1 Add Assignment

	div.assignment-title.well
		h3 Assignment Name
		input#assignment-title(type="text" placeholder="Assignment 1" name="assignment-title")
		p#assignment-title-error(style="color:red;")

	div.select-class.well
		h3 Select Course
		select.selectpicker(id="class-picker")

	div.file-upload.well
		input#assignment(type="file" name="assignment" style="visibility:hidden;")
		div.input-append
			h3 Select File
			input#assignmentbox(type="text" name="assignmentbox" readonly)
			a.btn.btn-small(id="browse-btn") Browse
		p#errorbox(style="color:red;")
	
	div.well
		h3 Release Date:
		div.startDate
			div.input-append
				input#releaseDate.bootstrap-datepicker(type="text") 
				span.add-on
					i.glyphicon.glyphicon-calendar
		.input-append.bootstrap-timepicker
			input#releaseTime.input-small(type="text")
			span.add-on: i.icon-time

		p#startTime-error(style="color:red;")


	div.well
		h3 Due Date:
		div.endDate
			div.input-append
				input#dueDate.bootstrap-datepicker(type="text")
				span.add-on
					i.glyphicon.glyphicon-calendar
		.input-append.bootstrap-timepicker
			input#dueTime.input-small(type="text")
			span.add-on: i.icon-time
		p#endTime-error(style="color:red;")

	div.submitButton.well
		a#submitBtn.btn.btn-lg.btn-success.cl Create Assignment
		p#submit-error(style="color:red;")

	script(src="/public/javascripts/professor.js")
	script(src="/node_modules/jquery-watermark/jquery.watermark.min.js")

